<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rs.tut2zad2.Controller">
   <center>
      <GridPane alignment="center" hgap="10" vgap="10">
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
         <columnConstraints>
            <ColumnConstraints prefWidth="170.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="70.0" />
         </columnConstraints>
         <children>
            <Label text="Unesite broj n:" />
            <TextField fx:id="unosBroja" GridPane.columnIndex="1" />
            <Label text="Brojevi djeljivi sumom cifara su:" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#sumaCifara" text="Press OK" GridPane.columnIndex="2" />
            <TextArea fx:id="ispisBrojeva" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </center>
</BorderPane>
